# frontend/Dockerfile

### STAGE 1: Build ###
FROM node:18-alpine AS build

WORKDIR /app
COPY package*.json ./
RUN npm install
COPY . .
RUN npm run build

### STAGE 2: Serve ###
FROM nginx:stable-alpine
COPY --from=build /app/build /usr/share/nginx/html
# Copy a custom nginx config if you have one, otherwise the default is used
# COPY nginx.conf /etc/nginx/conf.d/default.conf
EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]